<!DOCTYPE html>

<html>

<body>
    
<h1>Books投稿一覧</h1>



<table>
  <thead>
     <tr>
       <th>Title</th>
       <th>Body</th>
       <th colspan="3"></th>
     </tr>
  </thead>


    <tbody>
     <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>

        <td><%= link_to "show", book_path(book.id), method: :get %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
     <% end %>
    </tbody>
</table>




<h1>新規投稿</h1>

<% if flash.now[:error] %>
  <p><%= flash.now[:error] %></p>
<% end %>

<%= form_with model: @book, url:'/books', local:true do |f| %>
 

  <h4>タイトル</h4>
  <%= f.text_field :title %>


  <h4>本文</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>


</body>
</html>